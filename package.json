{
  "name": "pyro-appointments",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter web build && pnpm --filter api build",
    "start": "pnpm --filter api start & pnpm --filter web start",
    "prisma:migrate": "pnpm --filter prisma migrate dev --name init",
    "prisma:generate": "pnpm --filter prisma generate",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
